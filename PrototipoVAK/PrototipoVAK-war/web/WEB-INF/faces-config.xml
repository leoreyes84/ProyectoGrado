<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <locale-config>
            <default-locale>es</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>co.edu.udistrital.prototipovak.properties.MessageResources</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/paginas/estSeleccionaTest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>case1</from-outcome>
            <to-view-id>/paginas/estPresentaTest.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>presentaTest</from-outcome>
            <to-view-id>/paginas/estPresentaTest.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>veResultados</from-outcome>
            <to-view-id>/paginas/estVeResultados.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/paginas/profListaGrupos.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>veResultados</from-outcome>
            <to-view-id>/paginas/profVeResultados.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>estudiante</from-outcome>
            <to-view-id>/paginas/estSeleccionaTest.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>profesor</from-outcome>
            <to-view-id>/paginas/profListaGrupos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
